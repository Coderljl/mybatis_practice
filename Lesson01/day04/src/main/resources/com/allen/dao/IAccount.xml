<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.allen.dao.IAccount">
<!--    定义封装account和user的result-->
<resultMap id="accountUserMap" type="com.allen.domain.Account">
     <id property="id" column="aid"></id>
     <result property="uid" column="uid"></result>
     <result property="money" column="money"></result>
    <!--一对一关系映射，配置封装user内容 -->
    <association property="user" column="uid" javaType="com.allen.domain.User">
        <id property="id" column="id"></id>
        <result column="username" property="username"></result>
        <result column="address" property="address"></result>
        <result column="sex" property="sex"></result>
        <result column="brihtday" property="brihtday"></result>
    </association>
</resultMap>
    <!--    查询全部-->
    <select id="findAll" resultMap="accountUserMap">
--         select * from account ;
            select a.*,u.username,u.address
        from account a,user u
        where  u.id = a.uid;
    </select>

    <select id="findAllAccoun" resultType="com.allen.domain.AccountUser">
        select a.*,u.username,u.address
        from account a,user u
        where  u.id = a.uid;
    </select>


</mapper>